<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>

<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="photo68.view.SearchDialogController"  prefWidth="500" prefHeight="250" alignment="CENTER">

    <Label text="Search Criteria" />
    
    <HBox spacing="10">
        <Label text="Tag Type 1:" />
        <TextField fx:id="tagTypeField1" />
        <Label text="Tag Value 1:" />
        <TextField fx:id="tagValueField1" />
    </HBox>
    
<ComboBox fx:id="selectionComboBox" />


    
    <HBox spacing="10">
        <Label text="Tag Type 2:" />
        <TextField fx:id="tagTypeField2" />
        <Label text="Tag Value 2:" />
        <TextField fx:id="tagValueField2" />
    </HBox>
    
    <HBox spacing="10">
        <Label text="From Date:" />
        <DatePicker fx:id="fromDatePicker" />
    </HBox>
    <HBox spacing="10">
        <Label text="To Date:" />
        <DatePicker fx:id="toDatePicker" />
    </HBox>
    
    <HBox spacing="10">
        <Button fx:id="search" text="Search" onAction="#search" />
        <Button fx:id="create" text="Create Album" onAction="#create" />
    </HBox>
</VBox>

