<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="photo68.view.AlbumController">

    <AnchorPane prefHeight="50" style="-fx-background-color: #e0e0e0;">
        <Button fx:id="back" text="Back" onAction="#goBack" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10"/>
        <Button fx:id="move" text="Move To" onAction="#move" AnchorPane.leftAnchor="190" AnchorPane.topAnchor="10"/>
         <Button fx:id="copy" text="Copy To" onAction="#copy" AnchorPane.leftAnchor="270" AnchorPane.topAnchor="10"/>

    </AnchorPane>

    <ListView fx:id="photoListView" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="50"/>

    <Button fx:id="addPhoto" text="Add" onAction="#addPhoto" AnchorPane.leftAnchor="10" AnchorPane.bottomAnchor="5"/>
    <Button fx:id="removePhoto" text="Remove" onAction="#removePhoto" AnchorPane.leftAnchor="70" AnchorPane.bottomAnchor="5"/>
    <Button fx:id="captionPhoto" text="Edit Caption" onAction="#captionPhoto" AnchorPane.leftAnchor="145" AnchorPane.bottomAnchor="5"/>
    <Button fx:id="addTag" text="Add Tag" onAction="#addTag" AnchorPane.leftAnchor="250" AnchorPane.bottomAnchor="5"/>
    <Button fx:id="removeTag" text="Remove Tag" onAction="#removeTag" AnchorPane.leftAnchor="340" AnchorPane.bottomAnchor="5"/>
    <Button fx:id="displayPhoto" text="Display" onAction="#displayPhoto" AnchorPane.leftAnchor="450" AnchorPane.bottomAnchor="5"/>

</AnchorPane>

